# Discord Bot Configuration
DISCORD_TOKEN=your_discord_token_here
RAPIDAPI_KEY=your_rapidapi_key_here

# Voice Connection Settings (adjust for containers)
VOICE_CONNECTION_TIMEOUT=35
VOICE_RECONNECT_ATTEMPTS=3
VOICE_RETRY_DELAY=2
VOICE_AUTO_DISCONNECT_TIMEOUT=300

# Container Support (set to 'true' in Docker environments)
DOCKER_CONTAINER=false

# Music Settings
MAX_QUEUE_SIZE=20
MAX_SONG_DURATION=7200
DEFAULT_VOLUME=0.5

# Bot Settings
COMMAND_PREFIX=!
DOWNLOAD_DIR=./downloads

# Logging
LOG_LEVEL=INFO

# xAI / Grok (https://docs.x.ai/docs/tutorial)
# Create an API key at https://console.x.ai/team/default/api-keys
XAI_API_KEY=your_xai_api_key_here
# Optional overrides
XAI_TEXT_MODEL=grok-4
XAI_VISION_MODEL=grok-2-vision
AI_HISTORY_COUNT=10
AI_REPLY_SURROUND=2
